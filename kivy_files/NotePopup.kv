<NotePopup>:
    auto_dismiss: False
    size_hint: 0.5, 0.6
    title: ""
    on_open: root.LoadNote(root.month)

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        canvas.before:
            Color:
                rgba: 1, 1, 1, 1 
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            id: tab_label
            text: root.label_text
            markup: True
            text_size: self.size
            color: 0, 0, 0, 1
            font_size: 15
            halign: "center"
            valign: "middle"
            size_hint_y: 0.2

        TextInput:
            id: note_input
            multiline: True
            size_hint_y: 0.6

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.15
            spacing: 5

            # Superior barre : style + save
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: '40dp'
                spacing: 5

                Button:
                    text: "Bold"
                    on_release: root.apply_style("bold")

                Button:
                    text: "Italic"
                    on_release: root.apply_style("italic")

                Button:
                    text: "Highlight"
                    on_release: root.toggle_highlight_menu()

                Button:
                    text: "Color"
                    on_release: root.toggle_color_menu()

                # Widget vide qui pousse "Save" Ã  droite
                Widget:

                Button:
                    text: "Save"
                    size_hint_x: None
                    width: '80dp'
                    on_release:
                        root.SaveNoteInAfile(self)
                        root.dismiss()
                    background_color: 0.5, 0.9, 0.5, 1

            # sub-menu for highlight
            BoxLayout:
                id: highlight_menu
                size_hint_y: None
                height: 0
                opacity: 0
                spacing: 5

                Button:
                    text: "Vert pastel"
                    on_release: root.apply_style("highlight_green")

                Button:
                    text: "Jaune pastel"
                    on_release: root.apply_style("highlight_yellow")

                Button:
                    text: "Bleu pastel"
                    on_release: root.apply_style("highlight_blue")

            # sub-menu for colors
            BoxLayout:
                id: color_menu
                size_hint_y: None
                height: 0
                opacity: 0
                spacing: 5

                Button:
                    text: "Rouge"
                    on_release: root.apply_style("color_red")

                Button:
                    text: "Noir"
                    on_release: root.apply_style("color_black")

                Button:
                    text: "Vert"
                    on_release: root.apply_style("color_green")

                Button:
                    text: "Bleu"
                    on_release: root.apply_style("color_blue")