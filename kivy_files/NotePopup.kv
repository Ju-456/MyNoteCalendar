#:import platform kivy.utils.platform

<ButtonRounded@Button>:
    background_normal: ''  
    background_color: 0.7, 0.8, 0.95, 1  # blue
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15, 15, 15, 15]  

<NotePopup>:
    auto_dismiss: False
    size_hint: (0.65, 0.7) if platform == "android" else (0.45, 0.5)
    title: ""
    on_open: root.LoadNote(root.month)

    FloatLayout:
    
        Button:
            text: "X"
            size_hint: None, None
            size: dp(20), dp(20)
            background_normal: ""
            background_color: 1, 0.4, 0.4, 1  # clear red
            color: 1, 1, 1, 1  
            font_size: '16sp'
            on_release:
                root.dismiss()
                
                root.ids.pastel_menu.height = 0
                root.ids.pastel_menu.opacity = 0

                root.ids.color_menu.height = 0
                root.ids.color_menu.opacity = 0
            pos_hint: {"right": 1, "top": 1.20} if platform == "android" else {"right": 1, "top": 1.10}

        BoxLayout:
            orientation: "vertical"
            size_hint: 1,1 
            pos_hint: {"center_x": 0.5, "top": 1}
            padding: [10, 0, 10, 20]

            canvas.before:
                Color:
                    rgba: 0.8, 0.9, 1, 1  # bleu clair
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                id: tab_label
                text: root.label_text
                markup: True
                text_size: self.size
                color: 0, 0, 0, 1
                font_size: '16sp' if platform == "android" else '15sp'
                halign: "center"
                valign: "middle"
                size_hint_y: 0.2

            RelativeLayout:
                orientation: "vertical"
                size: root.width, root.height
                size_hint_y: 0.70
                    
                TextInput:
                    id: note_input
                    text:
                    multiline: True
                    size_hint: 1, 1
                    opacity: 0 if root.show_preview else 1
                    disabled: root.show_preview
                    on_selection_text: root.store_selection(self.selection_from, self.selection_to)
                
                Label:
                    id: preview_label
                    markup: True
                    text: ''
                    text_size: self.width, self.height
                    color: 0, 0, 0, 1
                    font_size: '17sp' if platform == "android" else '15sp'
                    halign: "left"
                    valign: "top"
                    size_hint: 1, 1
                    opacity: 1 if root.show_preview else 0

                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1 
                        Rectangle:
                            pos: self.pos
                            size: self.size

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.15

                # Superior barre : style + ->/remove/save
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '20dp'
                    spacing: 5
                    padding: [0, 10, 0, 0]  

                    ButtonRounded:
                        text: "[b]B[/b]"
                        size_hint_x: 0.7
                        markup: True
                        on_press: root.apply_style("bold")

                    ButtonRounded:
                        text: "[i]It[/i]"
                        size_hint_x: 0.9
                        markup: True
                        on_press: root.apply_style("italic")

                    ButtonRounded:
                        text: "Pastel"
                        font_size: '14sp' if platform == "android" else '12sp'
                        size_hint_x: 1.1
                        color: 0.5, 0.5, 0.5, 1
                        background_normal: ''
                        background_color: 1, 1, 0.7, 1
                        on_press: root.toggle_pastel_menu()

                    ButtonRounded:
                        text: "[color=ff0000]C[/color][color=000000]o[/color][color=00aa00]l[/color][color=0000ff]o[/color][color=ffff00]r[/color]"
                        font_size: '14sp' if platform == "android" else '12sp'
                        size_hint_x: 1.20
                        markup: True
                        on_press: root.toggle_color_menu()

                    Widget: # Widget who push "style + ->/remove/save" in the right

                    Button:
                        text: "->" if root.show_preview else "<-"
                        size_hint_x: None
                        width: '35dp'
                        background_normal: ""
                        background_color: 0.7, 0.8, 0.95, 1
                        color: 0.5, 0.5, 0.5, 1
                        on_press: root.toggle_view()

                    Button:
                        text: "Remove"
                        font_size: '14sp'
                        size_hint_x: None
                        width: '55dp'
                        on_release:
                            root.RemoveNote()
                            root.dismiss()
                        background_normal: ''
                        background_color: 1, 0.6, 0.6, 1  # clear red

                    Button:
                        text: "Save"
                        color: 0.5, 0.5, 0.5, 1
                        size_hint_x: None
                        width: '55dp'
                        on_release:
                            root.SaveNoteInAfile()
                            root.dismiss()
                        background_normal: ""
                        background_color: 0.8, 1, 0.8, 1 # green pastel

                # sub-menu for pastel
                BoxLayout:
                    id: pastel_menu
                    size_hint_y: None
                    height: 0
                    opacity: 0
                    spacing: 5
                    padding : [0,10,0,0] 

                    Button:
                        text: "G"
                        color: 0.5, 0.5, 0.5, 1
                        background_normal: ''
                        background_color: 0.8, 1, 0.8, 1
                        on_press: root.apply_style("pastel_green")

                    Button:
                        text: "Y"
                        color: 0.5, 0.5, 0.5, 1
                        background_normal: ''
                        background_color: 1, 1, 0.7, 1
                        on_press: root.apply_style("pastel_yellow")

                    Button:
                        text: "B"
                        color: 0.5, 0.5, 0.5, 1
                        background_normal: ''
                        background_color: 0.8, 0.9, 1, 1
                        on_press: root.apply_style("pastel_blue")

                # sub-menu for colors
                BoxLayout:
                    id: color_menu
                    size_hint_y: None
                    height: 0
                    opacity: 0
                    spacing: 5
                    padding : [0,10,0,0] 

                    ButtonRounded:
                        text: "[color=ff0000]R[/color]"
                        markup: True
                        on_press: root.apply_style("color_red")

                    ButtonRounded:
                        text: "[color=00aa00]G[/color]"
                        markup: True
                        on_press: root.apply_style("color_green")

                    ButtonRounded:
                        text: "[color=0000ff]B[/color]"
                        markup: True
                        on_press: root.apply_style("color_blue")