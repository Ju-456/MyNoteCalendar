<ButtonRounded@Button>:
    background_normal: ''  
    background_color: 0.8, 0.9, 1, 1  # clear blue
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15, 15, 15, 15]  

<NotePopup>:
    auto_dismiss: False
    size_hint: 0.5, 0.6
    title: ""
    on_open: root.LoadNote(root.month)

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        canvas.before:
            Color:
                rgba: 1, 1, 1, 1 
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: "X"
            size_hint: None, None
            size: dp(20), dp(20)
            background_normal: ""
            background_color: 1, 0.4, 0.4, 1  # clear red
            color: 1, 1, 1, 1  
            font_size: '16sp'
            on_release: root.dismiss()
            pos_hint: {"right": 1, "top": 1}

        Label:
            id: tab_label
            text: root.label_text
            markup: True
            text_size: self.size
            color: 0, 0, 0, 1
            font_size: 15
            halign: "center"
            valign: "middle"
            size_hint_y: 0.2

        TextInput:
            id: note_input
            multiline: True
            size_hint_y: 0.6
            on_selection_text: root.store_selection(self.selection_from, self.selection_to)
        
        Label:
            id: preview_label
            markup: True
            text: root.get_markup_preview()
            text_size: self.size
            color: 0, 0, 0, 1
            font_size: 15
            halign: "left"
            valign: "top"
            size_hint_y: 0.3

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.15
            spacing: 5

            # Superior barre : style + save
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: '40dp'
                spacing: 5

                ButtonRounded:
                    text: "[b]B[/b]"
                    markup: True
                    on_press: root.apply_style("bold")

                ButtonRounded:
                    text: "[i]It[/i]"
                    markup: True
                    on_press: root.apply_style("italic")

                ButtonRounded:
                    text: "Pastel"
                    color: 0.5, 0.5, 0.5, 1
                    background_normal: ''
                    background_color: 1, 1, 0.7, 1
                    on_press: root.toggle_pastel_menu()

                ButtonRounded:
                    text: "[color=ff0000]C[/color][color=000000]o[/color][color=00aa00]l[/color][color=0000ff]o[/color][color=ffff00]r[/color]"
                    markup: True
                    on_press: root.toggle_color_menu()

                # Widget who push "Save" in the right
                Widget:

                Button:
                    text: "Save"
                    size_hint_x: None
                    width: '80dp'
                    on_release:
                        root.SaveNoteInAfile()
                        root.dismiss()
                    background_color: 0.5, 0.9, 0.5, 1

            # sub-menu for pastel
            BoxLayout:
                id: pastel_menu
                size_hint_y: None
                height: 0
                opacity: 0
                spacing: 5

                Button:
                    text: "G"
                    color: 0.5, 0.5, 0.5, 1
                    background_normal: ''
                    background_color: 0.8, 1, 0.8, 1
                    on_press: root.apply_style("pastel_green")

                Button:
                    text: "Y"
                    color: 0.5, 0.5, 0.5, 1
                    background_normal: ''
                    background_color: 1, 1, 0.7, 1
                    on_press: root.apply_style("pastel_yellow")

                Button:
                    text: "B"
                    color: 0.5, 0.5, 0.5, 1
                    background_normal: ''
                    background_color: 0.8, 0.9, 1, 1
                    on_press: root.apply_style("pastel_blue")

            # sub-menu for colors
            BoxLayout:
                id: color_menu
                size_hint_y: None
                height: 0
                opacity: 0
                spacing: 5

                ButtonRounded:
                    text: "[color=ff0000]R[/color]"
                    markup: True
                    on_press: root.apply_style("color_red")

                ButtonRounded:
                    text: "[color=000000]B[/color][color=00aa00]"
                    markup: True
                    on_press: root.apply_style("color_black")

                ButtonRounded:
                    text: "[color=00aa00]G[/color]"
                    markup: True
                    on_press: root.apply_style("color_green")

                ButtonRounded:
                    text: "[color=0000ff]B[/color]"
                    markup: True
                    on_press: root.apply_style("color_blue")